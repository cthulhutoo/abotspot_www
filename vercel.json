{
  "buildCommand": "astro build",
  "outputDirectory": "dist",
  "devCommand": "astro dev",
  "installCommand": "npm install",
  "framework": "astro",
  "regions": ["iad1"],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/index.html",
      "destination": "/"
    }
  ],
  "rewrites": [
    {
      "source": "/:page",
      "destination": "/:page.html"
    },
    {
      "source": "/about",
      "destination": "/about.html"
    },
    {
      "source": "/donate",
      "destination": "/donate.html"
    },
    {
      "source": "/committee",
      "destination": "/committee.html"
    },
    {
      "source": "/contact",
      "destination": "/contact.html"
    },
    {
      "source": "/programs",
      "destination": "/programs.html"
    },
    {
      "source": "/programs/:page",
      "destination": "/programs/:page.html"
    }
  ]
}
