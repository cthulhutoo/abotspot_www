---
interface Stat {
  label: string;
  value: string;
  description?: string;
}

interface Props {
  stats: Stat[];
}

const { stats } = Astro.props;
---

<section class="bg-white section">
  <div class="container">
    <h2 class="text-3xl font-bold text-center mb-12">Our Impact</h2>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {stats.map((stat) => (
        <div class="text-center">
          <div class="text-5xl font-bold text-blue-500 mb-2">{stat.value}</div>
          <div class="text-xl font-semibold mb-2">{stat.label}</div>
          {stat.description && (
            <p class="text-gray-600">{stat.description}</p>
          )}
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  @keyframes countUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .text-5xl {
    animation: countUp 0.6s ease-out;
  }
</style>
