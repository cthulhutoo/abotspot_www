---
import AnimatedCounter from './AnimatedCounter.astro';
import ScrollReveal from './ScrollReveal.astro';

interface Stat {
  label: string;
  value: number;
  description?: string;
  displayValue?: string;
}

interface Props {
  stats: Stat[];
  className?: string;
}

const { stats, className = '' } = Astro.props;
---

<section class={`bg-white section ${className}`}>
  <div class="container">
    <div class="text-center">
      <h2 class="text-3xl font-bold mb-12">Our Impact</h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {stats.map((stat, index) => (
        <div class="text-center">
          <div>
            {stat.displayValue ? (
              <div class="text-5xl font-bold text-blue-500 mb-2">
                {stat.displayValue}
              </div>
            ) : (
              <AnimatedCounter
                target={stat.value}
                label={stat.value.toLocaleString()}
                prefix="$"
                duration={1500}
                class="mb-2"
              />
            )}
            <div class="text-xl font-semibold mb-2">{stat.label}</div>
            {stat.description && (
              <p class="text-gray-600">{stat.description}</p>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
