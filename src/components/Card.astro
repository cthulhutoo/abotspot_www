---
interface Props {
  title: string;
  description: string;
  href?: string;
  icon?: string;
  comingSoon?: boolean;
}

const { title, description, href, icon, comingSoon } = Astro.props;
---

<div class="bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 border border-gray-100 hover:border-blue-200 p-6 h-full flex flex-col">
  {icon && (
    <div class="w-14 h-14 bg-gradient-to-br from-blue-100 to-blue-200 rounded-xl flex items-center justify-center mb-4 shadow-sm">
      <span class="text-3xl drop-shadow-sm">{icon}</span>
    </div>
  )}

  <h3 class="text-xl font-bold mb-3">
    {href ? (
      <a href={href} class="hover:text-blue-500 transition-colors">
        {title}
      </a>
    ) : (
      title
    )}
  </h3>

  <p class="text-gray-600 mb-5 leading-relaxed">{description}</p>

  {comingSoon && (
    <span class="inline-block px-3 py-1 bg-yellow-100 text-yellow-800 text-sm font-medium rounded-full">
      Coming Soon
    </span>
  )}

  {href && (
    <a
      href={href}
      class="inline-flex items-center justify-center w-full py-3 px-6 text-white bg-gradient-to-r from-blue-500 to-blue-600 rounded-xl font-medium hover:from-blue-600 hover:to-blue-700 transition-all shadow-md hover:shadow-lg"
    >
      Learn More
      <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </a>
  )}
</div>
