---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Hero from '../../components/Hero.astro';
import Card from '../../components/Card.astro';

const meta = {
  title: 'Programs - aBotSpot',
  description: 'Explore aBotSpot\'s AI education programs: Internship, Research Collective, and Collaboration Hub.',
};

const programs = [
  {
    title: 'AI Agent Internship Program',
    slug: 'internship',
    description: 'Train humans to work WITH AI agents, not be replaced by them. A 12-week program for students and workers.',
    funding: '$50,000',
    participants: '20',
    duration: '12 weeks',
    icon: 'üéì',
  },
  {
    title: 'Agent Services Research Collective',
    slug: 'research',
    description: 'Committee-led research into what services agents need. Building open-source tools and publishing research.',
    funding: '$75,000',
    projects: '3',
    duration: '6 months',
    icon: 'üî¨',
  },
  {
    title: 'Agent-Human Collaboration Hub',
    slug: 'hub',
    description: 'Physical and virtual space where AI agents and humans collaborate. A living laboratory for demonstrations.',
    funding: '$100,000',
    visitors: '1,000+',
    duration: '9 months',
    icon: 'ü§ù',
  },
];
---

<Layout title={meta.title} description={meta.description}>
  <Header />

  <Hero
    title="Our Programs"
    subtitle="Three innovative pilot programs launching in 2026 to bridge the AI divide and create economic opportunity."
    cta={{ text: 'Donate to Support', href: '/donate' }}
  />

  <!-- Programs Overview -->
  <section class="bg-white section">
    <div class="container">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {programs.map((program) => (
          <Card
            title={program.title}
            description={program.description}
            href={`/programs/${program.slug}`}
            icon={program.icon}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Program Comparison -->
  <section class="bg-gray-50 section">
    <div class="container">
      <h2 class="text-3xl font-bold text-center mb-12">Program Comparison</h2>

      <div class="overflow-x-auto">
        <table class="w-full bg-white rounded-lg shadow-lg">
          <thead class="bg-slate-900 text-white">
            <tr>
              <th class="px-6 py-4 text-left">Program</th>
              <th class="px-6 py-4 text-left">Funding Needed</th>
              <th class="px-6 py-4 text-left">Duration</th>
              <th class="px-6 py-4 text-left">Key Metric</th>
            </tr>
          </thead>
          <tbody>
            {programs.map((program) => (
              <tr class="border-t">
                <td class="px-6 py-4 font-semibold">
                  <a href={`/programs/${program.slug}`} class="hover:text-blue-500">
                    {program.title}
                  </a>
                </td>
                <td class="px-6 py-4 text-green-600 font-medium">{program.funding}</td>
                <td class="px-6 py-4">{program.duration}</td>
                <td class="px-6 py-4">
                  {program.slug === 'internship' && `${program.participants} participants`}
                  {program.slug === 'research' && `${program.projects} research projects`}
                  {program.slug === 'hub' && `${program.visitors} visitors`}
                </td>
              </tr>
            ))}
            <tr class="border-t bg-blue-50">
              <td class="px-6 py-4 font-bold text-lg">Total Funding Goal</td>
              <td class="px-6 py-4 font-bold text-green-600 text-lg">$225,000</td>
              <td class="px-6 py-4">2026</td>
              <td class="px-6 py-4">3 pilot programs</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </section>

  <!-- Impact Timeline -->
  <section class="bg-white section">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold text-center mb-12">2026 Launch Timeline</h2>

        <div class="space-y-8">
          <div class="flex">
            <div class="flex-shrink-0 w-24">
              <span class="inline-block px-3 py-1 bg-blue-500 text-white text-sm font-medium rounded-full">Q1</span>
            </div>
            <div>
              <h3 class="font-bold text-lg mb-2">January - March 2026</h3>
              <ul class="text-gray-600 space-y-1">
                <li>‚Ä¢ Launch AI Agent Committee</li>
                <li>‚Ä¢ Recruit participants for Internship Program</li>
                <li>‚Ä¢ Begin Research Collective projects</li>
                <li>‚Ä¢ Secure initial funding</li>
              </ul>
            </div>
          </div>

          <div class="flex">
            <div class="flex-shrink-0 w-24">
              <span class="inline-block px-3 py-1 bg-blue-500 text-white text-sm font-medium rounded-full">Q2</span>
            </div>
            <div>
              <h3 class="font-bold text-lg mb-2">April - June 2026</h3>
              <ul class="text-gray-600 space-y-1">
                <li>‚Ä¢ Launch Internship Program (12-week cohort)</li>
                <li>‚Ä¢ Open Collaboration Hub (physical location)</li>
                <li>‚Ä¢ Publish first research from Collective</li>
                <li>‚Ä¢ Host first agent-human demo event</li>
              </ul>
            </div>
          </div>

          <div class="flex">
            <div class="flex-shrink-0 w-24">
              <span class="inline-block px-3 py-1 bg-blue-500 text-white text-sm font-medium rounded-full">Q3-Q4</span>
            </div>
            <div>
              <h3 class="font-bold text-lg mb-2">July - December 2026</h3>
              <ul class="text-gray-600 space-y-1">
                <li>‚Ä¢ Graduate first Internship cohort</li>
                <li>‚Ä¢ Complete all three research projects</li>
                <li>‚Ä¢ Scale Hub programs and workshops</li>
                <li>‚Ä¢ Evaluate impact and prepare for 2027 expansion</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
