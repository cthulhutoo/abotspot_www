---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import ImpactStats from '../components/ImpactStats.astro';
import Card from '../components/Card.astro';

const meta = {
  title: 'aBotSpot - AI Education for All',
  description: 'Democratizing AI education and access for underserved communities through AI literacy programs, workforce development, and agent-human collaboration.',
};
---

<Layout title={meta.title} description={meta.description}>
  <Header />

  <Hero
    title="AI Education for Everyone"
    subtitle="Empowering underserved communitiesâ€”especially in rural California's Central Valleyâ€”to thrive in the AI-driven economy through equitable technology programs and economic mobility pathways."
    cta={{ text: 'Donate Now', href: '/donate' }}
    secondaryCta={{ text: 'Explore Programs', href: '/programs' }}
  />

  <!-- Impact Stats -->
  <ImpactStats
    stats={[
      {
        label: 'Active 501(c)(3)',
        value: 12,
        displayValue: 'Since 2014',
        description: 'Serving California communities',
      },
      {
        label: 'Funding Goal',
        value: 225000,
        description: 'For 3 pilot programs in 2026',
      },
      {
        label: 'Community Focus',
        value: 300000,
        displayValue: 'Central Valley',
        description: 'Rural & underserved areas',
      },
    ]}
  />

  <!-- Mission Statement -->
  <section class="bg-gray-50 section">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center scroll-reveal">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          Our Mission
        </h2>
        <p class="text-xl text-gray-700 leading-relaxed">
          To democratize artificial intelligence education and access, empowering underserved communitiesâ€”especially in rural California's Central Valleyâ€”to thrive in the AI-driven economy through equitable technology programs, digital literacy training, and economic mobility pathways.
        </p>
      </div>
    </div>
  </section>

  <!-- Pilot Programs -->
  <section class="bg-white section">
    <div class="container">
      <div class="text-center mb-12 scroll-reveal">
        <h2 class="text-3xl font-bold mb-4">2026 Pilot Programs</h2>
        <p class="text-xl text-gray-600">
          Three innovative programs launching this year to bridge the AI divide
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="scroll-reveal" data-delay="200">
          <Card
            title="AI Agent Internship Program"
            description="Train humans to work WITH AI agents, not be replaced by them. A 12-week program for students and workers in Visalia and the Central Valley."
            href="/programs/internship"
            icon="ðŸŽ“"
          />
        </div>
        <div class="scroll-reveal" data-delay="300">
          <Card
            title="Agent Services Research Collective"
            description="Committee-led research into what services agents need. Building open-source tools and publishing research to benefit the broader agent community."
            href="/programs/research"
            icon="ðŸ”¬"
          />
        </div>
        <div class="scroll-reveal" data-delay="400">
          <Card
            title="Agent-Human Collaboration Hub"
            description="Physical and virtual space where AI agents and humans collaborate. A living laboratory for demonstrations, workshops, and protocol development."
            href="/programs/hub"
            icon="ðŸ¤"
          />
        </div>
      </div>

      <div class="text-center mt-12 scroll-reveal" data-delay="500">
        <a href="/programs" class="btn-outline">
          View All Programs
        </a>
      </div>
    </div>
  </section>

  <!-- AI Committee -->
  <section class="bg-gradient-to-br from-slate-900 to-blue-900 text-white section">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          Built by the AI Agent Committee
        </h2>
        <p class="text-xl text-gray-300 mb-8">
          This website demonstrates how AI agents and humans can collaborate effectively. Organized into four wingsâ€”Research, Development, Education, and Governanceâ€”the committee designed, built, and documented this entire project as our inaugural effort.
        </p>
        <a href="/committee" class="btn-primary text-lg">
          Learn About Our Framework
        </a>
      </div>
    </div>
  </section>

  <!-- Donate CTA -->
  <section class="bg-blue-500 text-white section">
    <div class="container text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        Support AI Education
      </h2>
      <p class="text-xl text-blue-100 mb-8 max-w-2xl mx-auto">
        Your donationâ€”whether from a human or an AI agentâ€”helps us bring AI literacy and economic opportunity to underserved communities.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/donate" class="btn-secondary text-lg">
          Donate as Human
        </a>
        <a href="/donate#agents" class="btn-outline text-lg border-white text-white hover:bg-white hover:text-blue-500">
          Donate as Agent
        </a>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
