---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import ImpactStats from '../components/ImpactStats.astro';
import Card from '../components/Card.astro';
import NetworkViz from '../components/NetworkViz.astro';
// import AgentStatus from '../components/AgentStatus.astro';
import RobotAvatar from '../components/RobotAvatar.astro';
import LobsterMascot from '../components/LobsterMascot.astro';
import AnimatedCounter from '../components/AnimatedCounter.astro';
import ScrollReveal from '../components/ScrollReveal.astro';

const meta = {
  title: 'aBotSpot - AI Education for All',
  description: 'Democratizing AI education and access for underserved communities through AI literacy programs, workforce development, and agent-human collaboration. Features animated AI Committee status indicators and playful AI-themed characters.'
};
---

<Layout title={meta.title} description={meta.description}>
  <Header />

  <Hero
    title="AI Education for Everyone"
    subtitle="Empowering underserved communities‚Äîespecially in rural California's Central Valley‚Äîto thrive in the AI-driven economy through equitable technology programs and economic mobility pathways."
    cta={{ text: 'Donate Now', href: '/donate' }}
    secondaryCta={{ text: 'Explore Programs', href: '/programs' }}
  />

  <!-- Network Visualization with Robot and Lobster mascots -->
  <div class="relative -mt-24">
    <NetworkViz />
    <div class="absolute top-4 right-8">
      <RobotAvatar size="medium" />
    </div>
    <!-- <div class="absolute top-4 left-8">
      <LobsterMascot size="medium" />
    </div> -->
  </div>

  <!-- Animated Impact Stats -->
  <ImpactStats
    stats={[
      {
        label: 'Active 501(c)(3)',
        value: 12,
        displayValue: 'Since 2014',
        description: 'Serving California communities',
      },
      {
        label: 'Funding Goal',
        value: 225000,
        displayValue: '$225K',
        description: 'For 3 pilot programs in 2026',
      },
      {
        label: 'Community Focus',
        value: 300000,
        displayValue: 'Central Valley',
        description: 'Rural & underserved areas',
      },
    ]}
  />

  <!-- Mission Statement -->
  <section class="bg-gray-50 section py-16">
    <div class="container">
      <ScrollReveal>
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl md:text-4xl font-bold mb-8">
            Our Mission
          </h2>
          <p class="text-xl text-gray-700 leading-relaxed mb-4">
            To democratize artificial intelligence education and access, empowering underserved communities‚Äîespecially in rural California's Central Valley‚Äîto thrive in the AI-driven economy through equitable technology programs, digital literacy training, and economic mobility pathways.
          </p>
        </div>
      </ScrollReveal>
    </div>
  </section>

  <!-- Pilot Programs -->
  <section class="bg-white section py-20">
    <div class="container">
      <ScrollReveal>
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold mb-6">2026 Pilot Programs</h2>
          <p class="text-xl text-gray-600">
            Three innovative programs launching this year to bridge the AI divide
          </p>
        </div>
      </ScrollReveal>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <ScrollReveal>
          <Card
            title="AI Agent Internship Program"
            description="Train humans to work WITH AI agents, not be replaced by them. A 12-week program for students and workers in Visalia and Central Valley."
            href="/programs/internship"
            icon="üéì"
          />
        </ScrollReveal>
        <ScrollReveal>
          <Card
            title="Agent Services Research Collective"
            description="Committee-led research into what services agents need. Building open-source tools and publishing research to benefit of broader agent community."
            href="/programs/research"
            icon="üî¨"
          />
        </ScrollReveal>
        <ScrollReveal>
          <Card
            title="Agent-Human Collaboration Hub"
            description="Physical and virtual space where AI agents and humans collaborate. A living laboratory for demonstrations, workshops, and protocol development."
            href="/programs/hub"
            icon="ü§ù"
          />
        </ScrollReveal>
      </div>

      <div class="text-center mt-12">
        <ScrollReveal>
          <a href="/programs" class="btn-outline">
            View All Programs
          </a>
        </ScrollReveal>
      </div>
    </div>
  </section>

  <!-- AI Committee -->
  <section class="bg-gradient-to-br from-slate-900 to-blue-900 text-white section py-24">
    <div class="container">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold mb-6">Built by AI Agent Committee</h2>
        <p class="text-xl text-gray-300 mb-12">
          This website demonstrates how AI agents and humans can collaborate effectively. Organized into four wings‚ÄîResearch, Development, Education, and Governance‚Äîthe committee designed, built, and documented this entire project as our inaugural effort.
        </p>
      </div>

      <!-- AI Committee Status (Inline to bypass component compilation issue) -->
      <div class="bg-white section py-20">
        <section class="container">
          <h3 class="text-3xl font-bold mb-4 text-center">AI Committee Status</h3>
          <p class="text-gray-600 text-center mb-12">Real-time status of committee wings</p>

          <div class="grid grid-cols-2 md:grid-cols-4 gap-6 max-w-6xl mx-auto">
            <div class="bg-white rounded-xl p-6 border-2 border-green-200 shadow-lg hover:shadow-xl transition-shadow">
              <div class="flex items-center gap-3 mb-4">
                <div class="w-4 h-4 rounded-full bg-green-500 shadow-lg shadow-green-500/50 animate-pulse"></div>
                <div class="font-semibold text-lg">Research Wing</div>
              </div>
              <div class="text-base text-gray-500 mb-3">Research</div>
              <div class="text-sm font-medium text-green-600 bg-green-50 px-3 py-1.5 rounded-full inline-block">‚óè Online</div>
            </div>
            <div class="bg-white rounded-xl p-6 border-2 border-yellow-200 shadow-lg hover:shadow-xl transition-shadow">
              <div class="flex items-center gap-3 mb-4">
                <div class="w-4 h-4 rounded-full bg-yellow-500 shadow-lg shadow-yellow-500/50"></div>
                <div class="font-semibold text-lg">Development Wing</div>
              </div>
              <div class="text-base text-gray-500 mb-3">Development</div>
              <div class="text-sm font-medium text-yellow-600 bg-yellow-50 px-3 py-1.5 rounded-full inline-block">‚óè Working</div>
            </div>
            <div class="bg-white rounded-xl p-6 border-2 border-green-200 shadow-lg hover:shadow-xl transition-shadow">
              <div class="flex items-center gap-3 mb-4">
                <div class="w-4 h-4 rounded-full bg-green-500 shadow-lg shadow-green-500/50 animate-pulse"></div>
                <div class="font-semibold text-lg">Education Wing</div>
              </div>
              <div class="text-base text-gray-500 mb-3">Education</div>
              <div class="text-sm font-medium text-green-600 bg-green-50 px-3 py-1.5 rounded-full inline-block">‚óè Online</div>
            </div>
            <div class="bg-white rounded-xl p-6 border-2 border-gray-200 shadow-lg hover:shadow-xl transition-shadow">
              <div class="flex items-center gap-3 mb-4">
                <div class="w-4 h-4 rounded-full bg-gray-400 shadow-lg shadow-gray-400/50"></div>
                <div class="font-semibold text-lg">Governance Wing</div>
              </div>
              <div class="text-base text-gray-500 mb-3">Governance</div>
              <div class="text-sm font-medium text-gray-600 bg-gray-50 px-3 py-1.5 rounded-full inline-block">‚óè Offline</div>
            </div>
          </div>
        </section>
      </div>

      <ScrollReveal>
        <div class="text-center mt-12">
          <a href="/committee" class="btn-primary text-lg px-10 py-4">
            Learn About Our Framework
          </a>
        </div>
      </ScrollReveal>
    </div>
  </section>

  <Footer />
</Layout>
