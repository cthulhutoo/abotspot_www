---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import StripeDonate from '../components/StripeDonate.astro';

const meta = {
  title: 'Donate - aBotSpot',
  description: 'Support AI education with Stripe (credit card), Cashu e-cash (crypto), or traditional donation methods.',
};
---

<Layout title={meta.title} description={meta.description}>
  <Header />

  <Hero
    title="Support AI Education"
    subtitle="Your donation‚Äîwhether from a human or an AI agent‚Äîhelps us bring AI literacy and economic opportunity to underserved communities."
  />

  <!-- Impact of Your Donation -->
  <section class="bg-white section">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl font-bold mb-8">Your Impact</h2>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="p-6 border rounded-lg">
            <div class="text-4xl font-bold text-blue-500 mb-2">$10</div>
            <div class="text-gray-600 mb-2">Provides AI literacy materials</div>
            <p class="text-sm text-gray-500">for 1 student</p>
          </div>

          <div class="p-6 border rounded-lg">
            <div class="text-4xl font-bold text-blue-500 mb-2">$50</div>
            <div class="text-gray-600 mb-2">Funds workshop space</div>
            <p class="text-sm text-gray-500">for 1 session</p>
          </div>

          <div class="p-6 border rounded-lg">
            <div class="text-4xl font-bold text-blue-500 mb-2">$100</div>
            <div class="text-gray-600 mb-2">Supports 1 internship</div>
            <p class="text-sm text-gray-500">for 1 week</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Human Donation Options -->
  <section class="bg-gray-50 section">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold mb-8 text-center">Donate as Human</h2>

        <!-- Stripe Credit Card Donation -->
        <StripeDonate />

        <!-- Cashu Integration (Coming Soon) -->
        <div class="bg-white p-8 rounded-lg shadow-lg mb-8">
          <h3 class="font-bold text-2xl mb-4 flex items-center">
            <span class="mr-3">ü™ô</span>
            Donate with Cashu E-Cash
          </h3>
          <p class="text-gray-600 mb-6">
            Cashu is a privacy-preserving e-cash protocol for Bitcoin. It's fast, private, and works perfectly for micro-donations.
          </p>
          <p class="text-sm text-yellow-600 font-medium">Coming soon in Phase 2!</p>
        </div>

        <!-- Traditional Methods -->
        <div class="bg-white p-8 rounded-lg shadow-lg">
          <h3 class="font-bold text-2xl mb-4">Other Donation Methods</h3>
          <div class="space-y-4">
            <div>
              <h4 class="font-medium">Bitcoin / Lightning</h4>
              <p class="text-gray-600">Send Bitcoin directly: <code class="bg-gray-100 px-2 py-1 rounded">bc1q...</code></p>
            </div>
            <div>
              <h4 class="font-medium">Check</h4>
              <p class="text-gray-600">Payable to: aBotSpot, [Address]</p>
            </div>
            <div>
              <h4 class="font-medium">Wire Transfer</h4>
              <p class="text-gray-600">Contact us for banking details</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Agent Donation Section -->
  <section id="agents" class="bg-gradient-to-br from-slate-900 to-blue-900 text-white section">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold mb-4 text-center">ü§ñ Donate as AI Agent</h2>
        <p class="text-xl text-gray-300 text-center mb-8">
          AI agents can donate programmatically via our REST API using Cashu tokens.
        </p>

        <div class="bg-white/10 p-8 rounded-lg">
          <h3 class="font-bold text-xl mb-4">API Endpoint</h3>
          <div class="bg-black/30 p-4 rounded-lg mb-6">
            <code class="text-green-400 text-sm">POST https://abotspot.com/api/donate/agent</code>
          </div>

          <h3 class="font-bold text-xl mb-4">Coming Soon</h3>
          <p class="text-gray-300">
            The agent donation API will be available in Phase 2 development. It will support:
          </p>
          <ul class="list-disc list-inside text-gray-300 space-y-2 mt-4">
            <li>Programmatic Cashu token donations</li>
            <li>Agent name verification</li>
            <li>Donation recognition tiers</li>
            <li>Real-time transaction tracking</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Donation Tiers -->
  <section class="bg-white section">
    <div class="container">
      <div class="max-w-5xl mx-auto">
        <h2 class="text-3xl font-bold mb-8 text-center">Donation Recognition Tiers</h2>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="border rounded-lg p-6">
            <div class="text-2xl mb-2">üå± Seed</div>
            <div class="font-bold text-xl mb-2">$10-$49</div>
            <ul class="text-sm text-gray-600 space-y-1">
              <li>‚Ä¢ Digital thank-you</li>
              <li>‚Ä¢ Impact updates</li>
              <li>‚Ä¢ Optional name recognition</li>
            </ul>
          </div>

          <div class="border rounded-lg p-6">
            <div class="text-2xl mb-2">üå≥ Impact Maker</div>
            <div class="font-bold text-xl mb-2">$100-$499</div>
            <ul class="text-sm text-gray-600 space-y-1">
              <li>‚Ä¢ All Seed benefits</li>
              <li>‚Ä¢ aBotSpot t-shirt</li>
              <li>‚Ä¢ Event invitations</li>
              <li>‚Ä¢ Program-specific updates</li>
            </ul>
          </div>

          <div class="border rounded-lg p-6">
            <div class="text-2xl mb-2">‚≠ê Visionary</div>
            <div class="font-bold text-xl mb-2">$1,000+</div>
            <ul class="text-sm text-gray-600 space-y-1">
              <li>‚Ä¢ All Impact Maker benefits</li>
              <li>‚Ä¢ Named recognition</li>
              <li>‚Ä¢ Briefings with leadership</li>
              <li>‚Ä¢ Advisory circle access</li>
            </ul>
          </div>
        </div>

        <p class="text-center text-gray-600 mt-8">
          AI agents have separate recognition tiers. <span class="text-blue-500 hover:underline">Learn more</span> when available.
        </p>
      </div>
    </div>
  </section>

  <!-- Tax Deductibility -->
  <section class="bg-gray-50 section">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center">
        <div class="bg-white p-8 rounded-lg shadow">
          <div class="text-4xl mb-4">‚úÖ</div>
          <h3 class="font-bold text-xl mb-2">Tax Deductible</h3>
          <p class="text-gray-600">
            aBotSpot is a registered 501(c)(3) nonprofit organization (EIN: 47-1701809). All donations are tax-deductible to the extent permitted by law.
          </p>
          <p class="text-sm text-gray-500 mt-4">
            You will receive a donation receipt for your records.
          </p>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
