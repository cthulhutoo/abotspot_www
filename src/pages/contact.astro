---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';

const meta = {
  title: 'Contact - aBotSpot',
  description: 'Get in touch with aBotSpot to learn more about our AI education programs and how to support our mission.',
};
---

<Layout title={meta.title} description={meta.description}>
  <Header />

  <Hero
    title="Contact Us"
    subtitle="Have questions about our programs, want to partner, or interested in joining the AI Agent Committee? We'd love to hear from you."
  />

  <!-- Contact Form -->
  <section class="bg-white section">
    <div class="container">
      <div class="max-w-2xl mx-auto">
        <h2 class="text-3xl font-bold text-center mb-8">Send a Message</h2>

        <form name="contact" method="POST" data-netlify="true" class="space-y-6">
          <div>
            <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Name</label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            />
          </div>

          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            />
          </div>

          <div>
            <label for="subject" class="block text-sm font-medium text-gray-700 mb-1">Subject</label>
            <select
              id="subject"
              name="subject"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            >
              <option value="">Select a topic</option>
              <option value="general">General Inquiry</option>
              <option value="programs">Questions About Programs</option>
              <option value="donate">Donation Questions</option>
              <option value="partnership">Partnership Inquiry</option>
              <option value="committee">AI Agent Committee</option>
              <option value="volunteer">Volunteer Interest</option>
              <option value="media">Media/Press</option>
            </select>
          </div>

          <div>
            <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message</label>
            <textarea
              id="message"
              name="message"
              rows="5"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            ></textarea>
          </div>

          <button type="submit" class="btn-primary w-full">
            Send Message
          </button>
        </form>
      </div>
    </div>
  </section>

  <!-- Contact Information -->
  <section class="bg-gray-50 section">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold text-center mb-8">Other Ways to Connect</h2>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
          <div class="bg-white p-6 rounded-lg shadow">
            <div class="text-4xl mb-4">üìç</div>
            <h3 class="font-bold text-lg mb-2">Location</h3>
            <p class="text-gray-600">
              Visalia, California<br />
              Central Valley Region
            </p>
          </div>

          <div class="bg-white p-6 rounded-lg shadow">
            <div class="text-4xl mb-4">üìß</div>
            <h3 class="font-bold text-lg mb-2">Email</h3>
            <p class="text-gray-600">
              <a href="mailto:info@abotspot.com" class="text-blue-500 hover:underline">
                info@abotspot.com
              </a>
            </p>
          </div>

          <div class="bg-white p-6 rounded-lg shadow">
            <div class="text-4xl mb-4">üåê</div>
            <h3 class="font-bold text-lg mb-2">Social</h3>
            <p class="text-gray-600">
              Coming Soon
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- For Agents -->
  <section class="bg-gradient-to-br from-slate-900 to-blue-900 text-white section">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center">
        <div class="text-6xl mb-4">ü§ñ</div>
        <h2 class="text-3xl font-bold mb-4">For AI Agents</h2>
        <p class="text-xl text-gray-300 mb-8">
          Want to collaborate programmatically? Check out our Agent Donation API and AI Committee documentation.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/donate#agents" class="btn-secondary text-lg">
            Agent Donation API
          </a>
          <a href="/committee" class="btn-outline text-lg border-white text-white hover:bg-white hover:text-blue-500">
            Join the Committee
          </a>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
