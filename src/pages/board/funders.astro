---
// Funders Database Page
// Track funder information, giving history, and relationships

import Layout from '../../layouts/Layout.astro'

const pageTitle = 'Funder Database - aBotSpot'
const pageDescription = 'Manage funders and track giving history'

---

<Layout title={pageTitle} description={pageDescription}>
  <main class="min-h-screen bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 py-8">
      <!-- Page Header -->
      <div class="flex items-center justify-between mb-8">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Funder Database</h1>
          <p class="text-gray-600 mt-2">Track funders, giving history, and relationships</p>
        </div>
        <button class="px-6 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors font-medium">
          + Add New Funder
        </button>
      </div>

      <!-- Filters & Search -->
      <div class="bg-white rounded-xl shadow-lg p-6 mb-8">
        <div class="flex flex-col lg:flex-row gap-4">
          <!-- Search -->
          <div class="flex-1">
            <label class="block text-sm font-medium text-gray-700 mb-2">Search Funders</label>
            <input
              type="text"
              placeholder="Search by name, location, or keywords..."
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            />
          </div>

          <!-- Focus Area Filter -->
          <div class="lg:w-48">
            <label class="block text-sm font-medium text-gray-700 mb-2">Focus Area</label>
            <select
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
            >
              <option value="">All Areas</option>
              <option value="AI Education">AI Education</option>
              <option value="Community Development">Community Development</option>
              <option value="Local Resilience">Local Resilience</option>
              <option value="Technology">Technology</option>
              <option value="Environment">Environment</option>
              <option value="Arts & Culture">Arts & Culture</option>
            </select>
          </div>

          <!-- Relationship Filter -->
          <div class="lg:w-48">
            <label class="block text-sm font-medium text-gray-700 mb-2">Relationship</label>
            <select
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
            >
              <option value="">All Relationships</option>
              <option value="new">New Contact</option>
              <option value="prospecting">Prospecting</option>
              <option value="active">Active Relationship</option>
              <option value="past">Past Funder</option>
            </select>
          </div>
        </div>
      </div>

      <!-- Funders Table -->
      <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <table class="w-full">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Funder Name
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Organization
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Focus Areas
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Total Giving
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Relationship
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Last Contact
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Actions
              </th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <!-- Funder Row 1 -->
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4">
                <div class="font-medium text-gray-900">Chan Zuckerberg Initiative</div>
                <div class="text-sm text-gray-500">Meta Platforms</div>
              </td>
              <td class="px-6 py-4 text-sm text-gray-900">Education</td>
              <td class="px-6 py-4">
                <span class="px-2 py-0.5 bg-blue-100 text-blue-700 rounded-full text-xs">AI Education</span>
                <span class="px-2 py-0.5 bg-green-100 text-green-700 rounded-full text-xs">Community Development</span>
              </td>
              <td class="px-6 py-4 font-medium text-gray-900">$5,200,000</td>
              <td class="px-6 py-4">
                <span class="px-2 py-0.5 bg-green-100 text-green-600 rounded-full text-xs font-medium">Active</span>
              </td>
              <td class="px-6 py-4 text-sm text-gray-600">Mar 15, 2026</td>
              <td class="px-6 py-4">
                <div class="flex gap-2">
                  <button class="text-blue-600 hover:text-blue-800 text-sm font-medium">View</button>
                  <button class="text-purple-600 hover:text-purple-800 text-sm font-medium">Edit</button>
                  <button class="text-green-600 hover:text-green-800 text-sm font-medium">Email</button>
                </div>
              </td>
            </tr>

            <!-- Funder Row 2 -->
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4">
                <div class="font-medium text-gray-900">Ford Foundation</div>
                <div class="text-sm text-gray-500">Ford Motor Company</div>
              </td>
              <td class="px-6 py-4 text-sm text-gray-900">Community Development</td>
              <td class="px-6 py-4">
                <span class="px-2 py-0.5 bg-green-100 text-green-700 rounded-full text-xs">Community Development</span>
                <span class="px-2 py-0.5 bg-orange-100 text-orange-700 rounded-full text-xs">Local Resilience</span>
              </td>
              <td class="px-6 py-4 font-medium text-gray-900">$3,800,000</td>
              <td class="px-6 py-4">
                <span class="px-2 py-0.5 bg-yellow-100 text-yellow-600 rounded-full text-xs font-medium">Prospecting</span>
              </td>
              <td class="px-6 py-4 text-sm text-gray-600">Feb 20, 2026</td>
              <td class="px-6 py-4">
                <div class="flex gap-2">
                  <button class="text-blue-600 hover:text-blue-800 text-sm font-medium">View</button>
                  <button class="text-purple-600 hover:text-purple-800 text-sm font-medium">Edit</button>
                  <button class="text-green-600 hover:text-green-800 text-sm font-medium">Email</button>
                </div>
              </td>
            </tr>

            <!-- Funder Row 3 -->
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4">
                <div class="font-medium text-gray-900">Gates Foundation</div>
                <div class="text-sm text-gray-500">Microsoft</div>
              </td>
              <td class="px-6 py-4 text-sm text-gray-900">Global Health</td>
              <td class="px-6 py-4">
                <span class="px-2 py-0.5 bg-purple-100 text-purple-700 rounded-full text-xs">Global Health</span>
                <span class="px-2 py-0.5 bg-blue-100 text-blue-700 rounded-full text-xs">Technology</span>
              </td>
              <td class="px-6 py-4 font-medium text-gray-900">$12,500,000</td>
              <td class="px-6 py-4">
                <span class="px-2 py-0.5 bg-green-100 text-green-600 rounded-full text-xs font-medium">Active</span>
              </td>
              <td class="px-6 py-4 text-sm text-gray-600">Jan 30, 2026</td>
              <td class="px-6 py-4">
                <div class="flex gap-2">
                  <button class="text-blue-600 hover:text-blue-800 text-sm font-medium">View</button>
                  <button class="text-purple-600 hover:text-purple-800 text-sm font-medium">Edit</button>
                  <button class="text-green-600 hover:text-green-800 text-sm font-medium">Email</button>
                </div>
              </td>
            </tr>

            <!-- Funder Row 4 -->
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4">
                <div class="font-medium text-gray-900">MacArthur Foundation</div>
                <div class="text-sm text-gray-500">MacArthur Foundation</div>
              </td>
              <td class="px-6 py-4 text-sm text-gray-900">Social Justice</td>
              <td class="px-6 py-4">
                <span class="px-2 py-0.5 bg-pink-100 text-pink-700 rounded-full text-xs">Social Justice</span>
                <span class="px-2 py-0.5 bg-purple-100 text-purple-700 rounded-full text-xs">Arts & Culture</span>
              </td>
              <td class="px-6 py-4 font-medium text-gray-900">$7,200,000</td>
              <td class="px-6 py-4">
                <span class="px-2 py-0.5 bg-green-100 text-green-600 rounded-full text-xs font-medium">Active</span>
              </td>
              <td class="px-6 py-4 text-sm text-gray-600">Mar 10, 2026</td>
              <td class="px-6 py-4">
                <div class="flex gap-2">
                  <button class="text-blue-600 hover:text-blue-800 text-sm font-medium">View</button>
                  <button class="text-purple-600 hover:text-purple-800 text-sm font-medium">Edit</button>
                  <button class="text-green-600 hover:text-green-800 text-sm font-medium">Email</button>
                </div>
              </td>
            </tr>

            <!-- Funder Row 5 -->
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4">
                <div class="font-medium text-gray-900">Google.org</div>
                <div class="text-sm text-gray-500">Alphabet</div>
              </td>
              <td class="px-6 py-4 text-sm text-gray-900">Technology</td>
              <td class="px-6 py-4">
                <span class="px-2 py-0.5 bg-blue-100 text-blue-700 rounded-full text-xs">AI Education</span>
                <span class="px-2 py-0.5 bg-green-100 text-green-700 rounded-full text-xs">Technology</span>
              </td>
              <td class="px-6 py-4 font-medium text-gray-900">$8,900,000</td>
              <td class="px-6 py-4">
                <span class="px-2 py-0.5 bg-green-100 text-green-600 rounded-full text-xs font-medium">Active</span>
              </td>
              <td class="px-6 py-4 text-sm text-gray-600">Mar 5, 2026</td>
              <td class="px-6 py-4">
                <div class="flex gap-2">
                  <button class="text-blue-600 hover:text-blue-800 text-sm font-medium">View</button>
                  <button class="text-purple-600 hover:text-purple-800 text-sm font-medium">Edit</button>
                  <button class="text-green-600 hover:text-green-800 text-sm font-medium">Email</button>
                </div>
              </td>
            </tr>
          </tbody>
        </table>

        <!-- Pagination -->
        <div class="flex items-center justify-between px-6 py-4 bg-gray-50 border-t border-gray-200">
          <span class="text-sm text-gray-600">Showing 1-5 of 23 funders</span>
          <div class="flex gap-2">
            <button class="px-3 py-1 border border-gray-300 rounded hover:bg-gray-100 text-sm">Previous</button>
            <button class="px-3 py-1 border border-gray-300 rounded hover:bg-gray-100 text-sm">1</button>
            <button class="px-3 py-1 border border-gray-300 rounded hover:bg-gray-100 text-sm">2</button>
            <button class="px-3 py-1 border border-gray-300 rounded hover:bg-gray-100 text-sm">3</button>
            <button class="px-3 py-1 border border-gray-300 rounded hover:bg-gray-100 text-sm">4</button>
            <button class="px-3 py-1 border border-gray-300 rounded hover:bg-gray-100 text-sm">5</button>
            <button class="px-3 py-1 border border-gray-300 rounded hover:bg-gray-100 text-sm">Next</button>
          </div>
        </div>
      </div>

      <!-- Quick Actions Footer -->
      <div class="mt-6 flex gap-4">
        <button class="flex-1 px-6 py-3 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 text-gray-700 font-medium">
          Export Funders (CSV)
        </button>
        <button class="flex-1 px-6 py-3 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 text-gray-700 font-medium">
          Import Funders
        </button>
        <button class="flex-1 px-6 py-3 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 text-gray-700 font-medium">
          View All Grants
        </button>
        <button class="flex-1 px-6 py-3 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 text-gray-700 font-medium">
          Add to Pipeline
        </button>
      </div>
    </div>
  </main>
</Layout>
