---
// Grant Pipeline Board
// Kanban-style board showing grants in different stages

import Layout from '../../layouts/Layout.astro'

const pageTitle = 'Grant Pipeline - aBotSpot'
const pageDescription = 'Manage grant applications through kanban pipeline'

---

<Layout title={pageTitle} description={pageDescription}>
  <main class="min-h-screen bg-gray-50">
    <div class="max-w-full px-4 py-6">
      <!-- Page Header -->
      <div class="flex items-center justify-between mb-6">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Grant Pipeline</h1>
          <p class="text-gray-600 mt-1">Drag and drop grants through stages</p>
        </div>
        <div class="flex gap-3">
          <button class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors text-sm font-medium">
            + Add Grant
          </button>
          <button class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors text-sm font-medium">
            View Analytics
          </button>
          <button class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors text-sm font-medium">
            Filter & Sort
          </button>
        </div>
      </div>

      <!-- Pipeline Board -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4 overflow-x-auto pb-4">
        
        <!-- Discovery Column -->
        <div class="flex-shrink-0 w-72 bg-gray-100 rounded-xl flex flex-col">
          <div class="p-3 border-b border-gray-200">
            <div class="flex items-center justify-between">
              <h2 class="text-sm font-bold text-gray-700">Discovery</h2>
              <span class="px-2 py-0.5 bg-blue-100 text-blue-700 rounded-full text-xs font-medium" id="discoveryCount">3</span>
            </div>
          </div>
          <div class="p-3 space-y-3 flex-1 overflow-y-auto" id="discoveryColumn">
            <!-- Grant Card 1 -->
            <div class="bg-white rounded-lg shadow-sm p-4 border-l-4 border-blue-500 cursor-grab active:opacity-100 hover:opacity-80 transition-opacity">
              <div class="flex items-start justify-between mb-2">
                <span class="text-sm font-semibold text-gray-900">Community Tech Fund</span>
                <span class="px-2 py-0.5 bg-blue-100 text-blue-600 rounded text-xs font-medium">New</span>
              </div>
              <p class="text-sm text-gray-600 mb-2">Technology infrastructure for community centers</p>
              <div class="flex items-center justify-between">
                <span class="text-xs text-gray-500">$50,000 - $100,000</span>
                <span class="text-xs text-gray-400">Due: Mar 15</span>
              </div>
            </div>
            <!-- Grant Card 2 -->
            <div class="bg-white rounded-lg shadow-sm p-4 border-l-4 border-blue-500 cursor-grab">
              <div class="flex items-start justify-between mb-2">
                <span class="text-sm font-semibold text-gray-900">Education Innovation Grant</span>
                <span class="px-2 py-0.5 bg-green-100 text-green-600 rounded text-xs font-medium">Active</span>
              </div>
              <p class="text-sm text-gray-600 mb-2">STEM education programs in underserved communities</p>
              <div class="flex items-center justify-between">
                <span class="text-xs text-gray-500">$25,000 - $75,000</span>
                <span class="text-xs text-gray-400">Due: Mar 30</span>
              </div>
            </div>
            <!-- Grant Card 3 -->
            <div class="bg-white rounded-lg shadow-sm p-4 border-l-4 border-blue-500 cursor-grab">
              <div class="flex items-start justify-between mb-2">
                <span class="text-sm font-semibold text-gray-900">Local Food Systems</span>
                <span class="px-2 py-0.5 bg-yellow-100 text-yellow-600 rounded text-xs font-medium">Paused</span>
              </div>
              <p class="text-sm text-gray-600 mb-2">Support for local food production and distribution</p>
              <div class="flex items-center justify-between">
                <span class="text-xs text-gray-500">$100,000+</span>
                <span class="text-xs text-gray-400">Due: Apr 30</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Researching Column -->
        <div class="flex-shrink-0 w-72 bg-gray-100 rounded-xl flex flex-col">
          <div class="p-3 border-b border-gray-200">
            <div class="flex items-center justify-between">
              <h2 class="text-sm font-bold text-gray-700">Researching</h2>
              <span class="px-2 py-0.5 bg-purple-100 text-purple-700 rounded-full text-xs font-medium" id="researchingCount">2</span>
            </div>
          </div>
          <div class="p-3 space-y-3 flex-1 overflow-y-auto" id="researchingColumn">
            <!-- Grant Card -->
            <div class="bg-white rounded-lg shadow-sm p-4 border-l-4 border-purple-500 cursor-grab">
              <div class="flex items-start justify-between mb-2">
                <span class="text-sm font-semibold text-gray-900">AI Workforce Training</span>
                <span class="px-2 py-0.5 bg-orange-100 text-orange-600 rounded text-xs font-medium">Priority</span>
              </div>
              <p class="text-sm text-gray-600 mb-2">Training programs for workers transitioning to AI-augmented roles</p>
              <div class="flex items-center justify-between">
                <span class="text-xs text-gray-500">$75,000 - $150,000</span>
                <span class="text-xs text-gray-400">Deadline: Mar 20</span>
              </div>
            </div>
            <!-- Grant Card -->
            <div class="bg-white rounded-lg shadow-sm p-4 border-l-4 border-purple-500 cursor-grab">
              <div class="flex items-start justify-between mb-2">
                <span class="text-sm font-semibold text-gray-900">Renewable Energy Research</span>
                <span class="px-2 py-0.5 bg-red-100 text-red-600 rounded text-xs font-medium">Urgent</span>
              </div>
              <p class="text-sm text-gray-600 mb-2">Research into community-scale renewable energy solutions</p>
              <div class="flex items-center justify-between">
                <span class="text-xs text-gray-500">$200,000+</span>
                <span class="text-xs text-red-400">Deadline: Mar 10</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Writing Column -->
        <div class="flex-shrink-0 w-72 bg-gray-100 rounded-xl flex flex-col">
          <div class="p-3 border-b border-gray-200">
            <div class="flex items-center justify-between">
              <h2 class="text-sm font-bold text-gray-700">Writing</h2>
              <span class="px-2 py-0.5 bg-green-100 text-green-700 rounded-full text-xs font-medium" id="writingCount">1</span>
            </div>
          </div>
          <div class="p-3 space-y-3 flex-1 overflow-y-auto" id="writingColumn">
            <!-- Grant Card -->
            <div class="bg-white rounded-lg shadow-sm p-4 border-l-4 border-green-500 cursor-grab">
              <div class="flex items-start justify-between mb-2">
                <span class="text-sm font-semibold text-gray-900">Youth Mental Health Initiative</span>
                <span class="px-2 py-0.5 bg-blue-100 text-blue-600 rounded text-xs font-medium">In Review</span>
              </div>
              <p class="text-sm text-gray-600 mb-2">Mental health awareness and support programs for local youth</p>
              <div class="flex items-center justify-between">
                <span class="text-xs text-gray-500">$40,000 - $60,000</span>
                <span class="text-xs text-gray-400">Draft</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Submitted Column -->
        <div class="flex-shrink-0 w-72 bg-gray-100 rounded-xl flex flex-col">
          <div class="p-3 border-b border-gray-200">
            <div class="flex items-center justify-between">
              <h2 class="text-sm font-bold text-gray-700">Submitted</h2>
              <span class="px-2 py-0.5 bg-gray-200 text-gray-700 rounded-full text-xs font-medium" id="submittedCount">2</span>
            </div>
          </div>
          <div class="p-3 space-y-3 flex-1 overflow-y-auto" id="submittedColumn">
            <!-- Grant Card -->
            <div class="bg-white rounded-lg shadow-sm p-4 border-l-4 border-gray-400 cursor-grab">
              <div class="flex items-start justify-between mb-2">
                <span class="text-sm font-semibold text-gray-900">Digital Literacy Program</span>
                <span class="px-2 py-0.5 bg-blue-100 text-blue-600 rounded text-xs font-medium">Under Review</span>
              </div>
              <p class="text-sm text-gray-600 mb-2">Computer literacy and digital skills training programs</p>
              <div class="flex items-center justify-between">
                <span class="text-xs text-gray-500">$30,000 - $50,000</span>
                <span class="text-xs text-gray-400">Submitted: 2 days ago</span>
              </div>
            </div>
            <!-- Grant Card -->
            <div class="bg-white rounded-lg shadow-sm p-4 border-l-4 border-gray-400 cursor-grab">
              <div class="flex items-start justify-between mb-2">
                <span class="text-sm font-semibold text-gray-900">Senior Services Expansion</span>
                <span class="px-2 py-0.5 bg-yellow-100 text-yellow-600 rounded text-xs font-medium">Pending</span>
              </div>
              <p class="text-sm text-gray-600 mb-2">Expanding services for elderly community members</p>
              <div class="flex items-center justify-between">
                <span class="text-xs text-gray-500">$80,000 - $120,000</span>
                <span class="text-xs text-gray-400">Submitted: 1 day ago</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Awarded Column -->
        <div class="flex-shrink-0 w-72 bg-gray-100 rounded-xl flex flex-col">
          <div class="p-3 border-b border-gray-200">
            <div class="flex items-center justify-between">
              <h2 class="text-sm font-bold text-gray-700">Awarded</h2>
              <span class="px-2 py-0.5 bg-green-500 text-white rounded-full text-xs font-medium" id="awardedCount">1</span>
            </div>
          </div>
          <div class="p-3 space-y-3 flex-1 overflow-y-auto" id="awardedColumn">
            <!-- Grant Card -->
            <div class="bg-white rounded-lg shadow-sm p-4 border-l-4 border-green-500 cursor-grab">
              <div class="flex items-start justify-between mb-2">
                <span class="text-sm font-semibold text-gray-900">Community Garden Project</span>
                <span class="px-2 py-0.5 bg-green-100 text-green-600 rounded text-xs font-medium">Won</span>
              </div>
              <p class="text-sm text-gray-600 mb-2">Establishing community gardens in urban food deserts</p>
              <div class="flex items-center justify-between">
                <span class="text-xs text-green-600 font-semibold">$25,000</span>
                <span class="text-xs text-gray-400">Awarded: Mar 1</span>
              </div>
              <div class="mt-2 pt-2 border-t border-gray-100">
                <p class="text-xs text-gray-600"><strong>Next Steps:</strong> Finalize budget, begin procurement</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Rejected Column -->
        <div class="flex-shrink-0 w-72 bg-gray-100 rounded-xl flex flex-col">
          <div class="p-3 border-b border-gray-200">
            <div class="flex items-center justify-between">
              <h2 class="text-sm font-bold text-gray-700">Rejected</h2>
              <span class="px-2 py-0.5 bg-red-500 text-white rounded-full text-xs font-medium" id="rejectedCount">1</span>
            </div>
          </div>
          <div class="p-3 space-y-3 flex-1 overflow-y-auto" id="rejectedColumn">
            <!-- Grant Card -->
            <div class="bg-white rounded-lg shadow-sm p-4 border-l-4 border-red-400 opacity-60">
              <div class="flex items-start justify-between mb-2">
                <span class="text-sm font-semibold text-gray-900">Transportation Access Initiative</span>
                <span class="px-2 py-0.5 bg-red-100 text-red-600 rounded text-xs font-medium">Declined</span>
              </div>
              <p class="text-sm text-gray-600 mb-2">Improving transportation access for disabled residents</p>
              <div class="flex items-center justify-between">
                <span class="text-xs text-gray-500">$150,000</span>
                <span class="text-xs text-gray-400">Declined: Feb 28</span>
              </div>
              <div class="mt-2 pt-2 border-t border-gray-100">
                <p class="text-xs text-gray-600"><strong>Reason:</strong> Budget scope exceeded</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Footer Stats -->
      <div class="mt-6 bg-white rounded-xl shadow-lg p-6">
        <h3 class="text-lg font-bold text-gray-900 mb-4">Pipeline Overview</h3>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <div class="text-center p-4 bg-blue-50 rounded-lg">
            <p class="text-2xl font-bold text-blue-600">9</p>
            <p class="text-sm text-gray-600">Total Grants</p>
          </div>
          <div class="text-center p-4 bg-green-50 rounded-lg">
            <p class="text-2xl font-bold text-green-600">1</p>
            <p class="text-sm text-gray-600">Awarded</p>
          </div>
          <div class="text-center p-4 bg-purple-50 rounded-lg">
            <p class="text-2xl font-bold text-purple-600">5</p>
            <p class="text-sm text-gray-600">In Progress</p>
          </div>
          <div class="text-center p-4 bg-orange-50 rounded-lg">
            <p class="text-2xl font-bold text-orange-600">3</p>
            <p class="text-sm text-gray-600">Pending Review</p>
          </div>
        </div>
        <div class="mt-4 pt-4 border-t border-gray-100">
          <div class="flex items-center justify-between text-sm text-gray-600">
            <span>Total Potential Funding: <strong class="text-gray-900">$865,000</strong></span>
            <span>Success Rate: <strong class="text-green-600">11%</strong></span>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>
